<h2><%=l(:label_sincronizacion_cmis)%></h2>

<% @elementos.keys.sort.each do |categoria| %>
	<% if !@elementos[categoria]["E"].empty? || !@elementos[categoria]["N"].empty? %>
	    <h3><%= categoria %></h3>

		<% unless @elementos[categoria]["E"].empty? %>
			<h4><%=l(:label_documentos_eliminados_cmis)%></h4>
			<ul>
			<% @elementos[categoria]["E"].each do |documento| %>
			   <li>
					<%= link_to h(documento.title), :controller => 'cmis', :action => 'show', :id => documento, :project_id => @project %>
   				    <%= link_to_if_authorized image_tag('delete.png'), {:controller => 'cmis', :action => 'destroy', :id => documento},
														 :confirm => l(:text_are_you_sure),
														 :method => :post,
														 :class => 'delete',
														 :title => l(:button_delete) %>
				</li>
			<% end %>
			</ul>
		<% end %>
		
		<% unless @elementos[categoria]["N"].empty? %>
			<h4><%=l(:label_documentos_anyadidos_cmis)%></h4>
			<ul>
			<% @elementos[categoria]["N"].each do |nuevo| %>
			    <li>
					<%= nuevo["P"] %>
					
   				    <%= link_to_if_authorized image_tag('add.png'), {:controller => 'cmis', :action => 'import', :nuevo => nuevo["P"], :size => nuevo["S"], :categoria => categoria, :project_id => @project},
														 :confirm => l(:text_are_you_sure),
														 :method => :get,
														 :class => 'add',
														 :title => l(:button_add) %>
				</li>
			<% end %>
			</ul>
		<% end %>
	<% end %>
<% end %>

<% content_for :sidebar do %>
    <h3><%= l(:label_ayuda_sincronizar, '') %></h3>
    <p><%= l(:label_info_sincronizacion, '') %></p>
<% end %>