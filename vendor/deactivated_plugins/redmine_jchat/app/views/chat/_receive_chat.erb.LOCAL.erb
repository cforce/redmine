<div id="jchat-chat-area">
<% 
thisUser=""
@chats.reverse.each_with_index do |chat, index|


@user = User.find(chat[:user])
@me = User.current

flagFullName = false
flagTintMessages = false
flagShowSelfName = false

if @me.id == @user.id and flagTintMessages
	chatClass='chatMessageTinted'
else
	chatClass='chatMessage'
end
%>

<p class="jchat-row <%= index.even? ? 'even' : 'odd' %>" title="<%= chat.created_at.to_s(:db) %>">
<span class="jchat-username"><%= @user.login %>:</span>
<span class="jchat-message"><%= chat.message %></span>
</p>

<%
thisUser=chat[:user]
end %>
</table>
