<%= stylesheet_link_tag('subscription', :plugin => 'subscription') %>
<% if User.current.allowed_to?(:subscribe_to_project, @project) %>
  <% if (params[:controller] == 'projects' && params[:action] == 'show') ||
         params[:controller] == 'news' ||
         params[:controller] == 'versions' ||
         params[:controller] == 'files' ||
         params[:controller] == 'wiki' ||
        (params[:controller] == 'issues' && params[:action] == 'index') ||
        (params[:controller] == 'boards' && params[:action] == 'index') %>
    <% content_for :sidebar do %>
      <% if User.current.logged? %>
        <%= render(:partial => 'subscribe/form', :locals => { :resource => params[:controller] }) %>
      <% else %>
        <%= render(:partial => 'subscribe/register') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
