<%= error_messages_for 'contacts_helpdesk_settings' %>

<% form_tag({:controller => :contacts_helpdesks, :action => :save_settings, :project_id => @project}, :method => :put, :class => "tabular", :multipart => true, :id => 'helpdesk_settings') do %> 

  <div class="splitcontentleft">
    <h3><%=l(:label_helpdesk)%></h3>
    <%= render :partial => 'projects/settings/contacts_helpdesk_general' %>
  </div>

  <div class="splitcontentright">
    <h3><%=l(:label_helpdesk_server_settings)%></h3>
    <%= render :partial => 'projects/settings/contacts_helpdesk_server' %>
  </div>

  <div style="clear:both;"/>

  <%= render :partial => 'projects/settings/contacts_helpdesk_template' %>

  <br/>
  <br/>

  <%= submit_tag l(:button_save) %>

<% end %>

<% content_for :header_tags do %>
	<%= javascript_include_tag :contacts, :plugin => 'redmine_contacts'  %>
	<%= stylesheet_link_tag :contacts, :plugin => 'redmine_contacts' %>
<% end %>
