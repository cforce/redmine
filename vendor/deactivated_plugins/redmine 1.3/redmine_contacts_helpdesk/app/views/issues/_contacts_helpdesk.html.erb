<% if authorize_for(:issues, :send_helpdesk_response) && @issue.contacts.any? && @issue.contacts.first.emails.any? %>
<p>  
  <%= check_box_tag 'is_send_mail', 1, false, :onclick => "$('issue_status_id').value = #{HelpdeskSettings[:helpdesk_answered_status, @project]}; $('journal_contacts').toggle();" %>
  <%= label_tag :is_send_mail, l(:label_is_send_mail), :class => "icon icon-email-to", :style => "font-weight: bold;" %>
  
  <span id="journal_contacts" style="display: none;">
    <% @issue.contacts.each do |contact| %>
      <%= link_to(avatar_to(contact, :size => "16"),  contact_url(contact), :class => "avatar") + ' ' + link_to_source(contact) %>
      (<%= contact.emails.first %>)
    <% end %>
  </span>
</p>

<% end %>

<%= stylesheet_link_tag :contacts, :plugin => 'redmine_contacts' %>
<%= stylesheet_link_tag :contacts_helpdesk, :plugin => 'redmine_contacts_helpdesk' %>