api.message do                                                                   
  api.journal_id @journal.id 
  api.content @journal.notes  
  api.created_on @journal.created_on

  api.array :contacts do
    @journal.contact_journals.each do |contact_journal|
      api.contact do 
        api.id contact_journal.contact_id
        api.name contact_journal.contact.name
        api.email contact_journal.email
      end
    end
  end  

end
