<p>  
  <label><%= l(:label_invoice_company_name) %></label>
  <%= text_field_tag 'settings[company_name]', @settings[:company_name], :size => 60 %>
</p>

<p>  
  <label><%= l(:label_invoice_company_representative) %></label>
  <%= text_field_tag 'settings[company_representative]', @settings[:company_representative], :size => 60 %>
</p>

<p>  
  <label><%= l(:label_invoice_company_logo_url) %></label>
  <%= text_field_tag 'settings[company_logo_url]', @settings[:company_logo_url], :size => 60, :onchange => "$('company_logo_img').src=this.value;" %>
</p>
<p>
  <%= image_tag @settings[:company_logo_url] , :width  => 180, :id => 'company_logo_img' unless @settings[:company_logo_url].blank? %>
</p>

<p>  
  <label><%= l(:label_invoice_company_info) %></label>
  <%= text_area_tag 'settings[company_info]', @settings[:company_info], :rows => 8, :cols => 50 %>
</p>

<p>  
  <label><%= l(:label_invoice_bill_info) %></label>
  <%= text_area_tag 'settings[bill_info]', @settings[:bill_info], :rows => 8, :cols => 50 %>
</p>